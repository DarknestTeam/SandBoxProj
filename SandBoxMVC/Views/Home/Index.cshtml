        <script type="text/javascript">
            var CodeLink = document.querySelector(".authorization__button");

            var Code = document.querySelector(".authorization-code");
            var CodeClose = Code.querySelector(".modal-close");
            var form = Code.querySelector("form");

            CodeLink.addEventListener("click", function (evt) {
                evt.preventDefault();
                Code.classList.add("modal-show");

