@model SandBoxMVC.Models.Child
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name='viewport' content="width=device-width, initial-scale=1">
    <title>Sandbox-Z - Страница входа</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>


    <section class="authorization">
        <h2 class="authorization__main-title">Вход в личный кабинет</h2>
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <!--добавить action для формы -->
                <div class="authorization__login">
                    <p class="authorization__form-cell">
                        @*<label class="authorization__title" for="user-login">фамилия</label>*@
                        @Html.LabelFor(m => m.ChildName, new { @class = "authorization__title", @for = "user-login" })
                        @*<input class="authorization__field" id="user-login" type="text" name="login" placeholder="">*@
                        @Html.TextBoxFor(m => m.ChildName, new { @class = "authorization__field", @id = "user-login", @name = "login", @placeholder = "" })
                    </p>
                    <p class="authorization__form-cell">
                        @*<label class="authorization__title" for="user-password">имя</label>*@
                        @Html.LabelFor(m => m.Password, new { @class = "authorization__title", @for = "user-password" })
                        <input class="authorization__field" id="user-password" type="password" name="password" placeholder="">
                        @Html.TextBoxFor(m => m.Password, new { @class = "authorization__field", @id = "password", @name = "password", @placeholder = "" })
                    </p>
                    <button class="authorization__button" type="submit">Войти</button>

                </div>
            }
        </div>
</section>

